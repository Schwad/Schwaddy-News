<div class="row" style="background-color:#FF6600;">
  <div class="col-md-3">
    <h3 style="margin-top:6px;"><strong>Schwaddy News.</strong></h3>
  </div>
  <div class="col-md-6">
  </div>
  <div class="col-md-3">
    <p style="padding-top:7px;"><%= link_to "Source Code", "http://github.com/Schwad/Schwaddy-News" %> | <%= link_to "Blog", "http://theschwad.tumblr.com" %> | <%= mail_to "nicholas.schwaderer@gmail.com", "Contact" %> | <%= link_to "Donate","https://www.paypal.com/cgi-bin/webscr?cmd=_donations&business=J2MJ2TCC7EBXU&lc=US&item_name=PorkCasts&currency_code=USD&bn=PP%2dDonationsBF%3azuhqEnP%2epng%3aNonHosted" %></p>
  </div>
</div>

<% @stories.each do |story| %>
  <% unless story.source == nil %>
    <div class="row">
      <div class="col-md-1">
        <h5><%= story.points_text %></h5>
      </div>
      <div class="col-md-1">
      <h4 style="margin-left:50px;"><%= image_tag("y.gif", size: "20")%></h4>
      </div>
      <div class="col-md-8"
        <% if story.is_new %>
        style="background-color:#F8F8F8;"
        <% end %>
      >
        <h4><%= link_to story.source, story.href %>
          <% if story.is_new %>
            <%= image_tag("new.png", size: "30") %>
          <% end %>
        </h4>
    <!--   </div>
      <div class="col-md-2"> -->
        <span style="color:#828282;">(<%= story.originplace %>)</span>
      </div>

    </div>
  <% end %>
<% end %>